@model Survey
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Dojo Survey</title>
</head>

<body>
    <div class="container-fluid bg-secondary bg-gradient vh-100">
        <div class="container bg-dark text-light p-3 rounded-3">
            <form asp-action="Form" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="First and Last" asp-for="Name">
                </div>

                <label asp-for="DojoLocation" class="form-label">Dojo Location</label>
                <select class="form-select mb-3" id="location" aria-label="Default select example" asp-for="DojoLocation">
                    <option selected>Open this select menu</option>
                    <option value="San Jose">San Jose</option>
                    <option value="Seattle">Seattle</option>
                    <option value="Boise">Boise</option>
                </select>

                <label asp-for="FaveLanguage" class="form-label">Favorite Language</label>
                <select class="form-select mb-3" id="Language "aria-label="Default select example" asp-for="FaveLanguage">
                    <option selected>Open this select menu</option>
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="Javascript">Javascript</option>
                </select>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label">Comment (optional)</label>
                    <textarea class="form-control" id="comment" rows="3" asp-for="Comment"></textarea>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>